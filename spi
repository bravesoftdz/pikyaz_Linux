spigonder
        MOVWF  SSPBUF                  ; place data in send buffer
SPI_Out
        BTFSS  SSPSTAT,BF              ; has data been received?
        GOTO  SPI_Out               ; loop if not received yet
        MOVF  SSPBUF,W                ; empty the receive buffer
        RETURN
